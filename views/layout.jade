    div(id='fb-root')
    
    #wrap
      .navbar.navbar-googlebar
        .navbar-inner
          ul.nav.pull-right
            li
              a#bag.dropdown-toggle(href='#', data-toggle='dropdown')
                i.icon-briefcase
                |&nbsp;
                span#bagcount #{bagCount}
                |  item(s)
                i.icon-angle-down
                ul.dropdown-menu
                  li
                    a(href='/shoppingbag')
                      i.icon-shopping-cart
                      | View my bag
                  li
                    a#clearbag(href='#')
                      i.icon-trash
                      | Clear all items
                  li.divider
                  li
                    a#pdf(href='#')
                      i.icon-download-alt
                      | Save to PDF
                  li
                    a#print(href='#')
                      i.icon-print
                      | Print

      .container
        #apparelist-header.pagination-centered
          a(href='/') Apparelist
        .page-header.pagination-centered
          h1 Browse your favorite stores from one site.
        block content
